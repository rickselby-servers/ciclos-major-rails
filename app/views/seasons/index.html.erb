
<h1><%= t ".title" %></h1>

<% if admin_signed_in? %>
  <p>
    <%= link_to new_season_path, class: %i[btn btn-primary] do %>
      <%= fa_icon "plus" %>
      <%= t ".new" %>
    <% end %>
  </p>
<% end %>

<table id="seasons" class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Launch</th>
        <th>Start</th>
        <th>End</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <% @seasons.each do |season| %>
    <tr>
        <th><%= season.name %></th>
        <td><%= l season.launch_date %></td>
        <td><%= l season.start_date %></td>
        <td><%= l season.end_date %></td>
        <td><%= season_status season %></td>
        <td>
            <%= link_to "Edit", edit_season_path(season), class: %w[btn btn-sm btn-secondary] %>
        </td>
    </tr>
    <% end %>
    </tbody>
</table>
