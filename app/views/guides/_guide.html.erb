<div id="<%= dom_id guide %>" class="clearfix">
  <%= image_tag url_for(guide.photo), class: %i[float-end ms-3 mb-3], alt: t("guides.img_alt", name: guide.name) %>

  <h2>
    <% if admin_signed_in? %>
      <%= fa_icon "grip-lines", class: "me-2 sortable-handle" %>
    <% end %>
    <%= guide.name %>
  </h2>

  <%= sanitize guide.description %>

  <% if admin_signed_in? %>
    <div>
      <%= link_to edit_guide_path(guide), class: %i[btn btn-secondary] do %>
        <%= fa_icon "pencil" %>
        <%= t ".edit" %>
      <% end %>
    </div>
  <% end %>
</div>
