<%= bootstrap_form_with(model: photo) do |form| %>
  <% if photo.errors.any? %>
    <div style="color: red">
      <h2><%= t ".errors", count: photo.errors.count %></h2>

      <ul>
        <% photo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if photo.persisted? %>
    <%= image_tag photo.photo, class: %w[img-fluid d-block] %>

    <%= form.text_field :alt %>
  <% else %>
    <%= form.hidden_field :photoable_id %>
    <%= form.hidden_field :photoable_type %>

    <%= form.file_field :photos, multiple: true %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% if photo.persisted? %>
  <div class="mt-3">
    <%= bootstrap_form_with(model: photo, method: :delete, data: { turbo_confirm: t(".delete_confirm") }) do |f| %>
      <%= f.submit t(".delete"), class: "btn btn-danger" %>
    <% end %>
  </div>
<% end %>
