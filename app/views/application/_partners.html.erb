<div class="row row-cols-1 row-cols-lg-2" id="partners-links">
  <% @partners.each_slice(2) do |partners| %>
    <div class="col">
      <% partners.each do |partner| %>
        <%= link_to partner_path(partner), data: { turbo_frame: "modal" } do %>
          <%= image_tag partner.logo, alt: partner.name %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
