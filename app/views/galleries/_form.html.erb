<%= bootstrap_form_with(model: gallery) do |form| %>
  <% if gallery.errors.any? %>
    <div style="color: red">
      <h2><%= t ".errors", count: gallery.errors.count %></h2>

      <ul>
        <% gallery.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :name %>
  <%= form.date_field :date %>
  <%= form.file_field :photos, multiple: true %>
  <div>
    <%= form.submit %>
    <% if gallery.persisted? %>
      <%= link_to t(".delete"), gallery, class: %i[btn btn-danger],
                  data: { turbo_method: :delete, turbo_confirm: t(".delete_confirm") } %>
    <% end %>
  </div>
<% end %>
